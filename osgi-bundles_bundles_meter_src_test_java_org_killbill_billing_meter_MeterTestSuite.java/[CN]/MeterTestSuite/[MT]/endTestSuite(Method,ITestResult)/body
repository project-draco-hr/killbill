{
  log.info("***************************************************************************************************");
  log.info("***   Ending test {}:{} {} ({} s.)",method.getDeclaringClass().getName(),method.getName(),result.isSuccess() ? "SUCCESS" : "!!! FAILURE !!!",(result.getEndMillis() - result.getStartMillis()) / 1000);
  log.info("***************************************************************************************************");
  if (!hasFailed && !result.isSuccess()) {
    hasFailed=true;
  }
}
