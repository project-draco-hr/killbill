{
  final File[] found=directory.listFiles(new FileFilter(){
    @Override public boolean accept(    final File pathname){
      return pathname.getName().endsWith(".bin");
    }
  }
);
  if (found != null) {
    for (    final File file : found) {
      if (file.isDirectory()) {
        findBinFiles(files,file);
      }
 else {
        files.add(file);
      }
    }
  }
}
