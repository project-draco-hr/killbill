{
  if (janitor.isStopped()) {
    log.info("Janitor Task " + taskName + " was requested to stop");
    return;
  }
  final List<T> items=getItemsForIteration();
  for (  T item : items) {
    if (janitor.isStopped()) {
      log.info("Janitor Task " + taskName + " was requested to stop");
      return;
    }
    doIteration(item);
  }
}
