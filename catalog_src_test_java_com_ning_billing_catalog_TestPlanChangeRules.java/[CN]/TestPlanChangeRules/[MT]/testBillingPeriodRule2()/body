{
  Product P1=createProduct("FP");
  Product P2=createProduct("BP");
  Catalog c=createCatalog(new PlanChangeRule[]{new PlanChangeRule(Qualifier.TERM_FROM_SHORT_TO_LONG,END_OF_TERM,null)},null,null,P1,P2);
  assertEquals(END_OF_TERM,c.getPlanChangePolicy(new PlanPhaseSpecifier("FP",MONTHLY,null,EVERGREEN),new PlanPhaseSpecifier("BP",ANNUAL,null,EVERGREEN)));
  assertNull(c.getPlanChangePolicy(new PlanPhaseSpecifier("FP",ANNUAL,null,EVERGREEN),new PlanPhaseSpecifier("BP",MONTHLY,null,EVERGREEN)));
}
