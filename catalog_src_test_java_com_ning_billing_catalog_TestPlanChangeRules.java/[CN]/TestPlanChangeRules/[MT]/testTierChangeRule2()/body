{
  Product P1=createProduct("FP");
  Product P2=createProduct("BP");
  Catalog c=createCatalog(new PlanPolicyChangeRule[]{new PlanPolicyChangeRule(Qualifier.PRODUCT_FROM_HIGH_TO_LOW,IMMEDIATE,null)},null,null,P1,P2);
  assertEquals(IMMEDIATE,c.getPlanChangePolicy(new PlanPhaseSpecifier("BP",null,ANNUAL,null,EVERGREEN),new PlanSpecifier("FP",null,MONTHLY,null)));
  assertNull(c.getPlanChangePolicy(new PlanPhaseSpecifier("FP",null,MONTHLY,null,TRIAL),new PlanSpecifier("BP",null,ANNUAL,null)));
}
