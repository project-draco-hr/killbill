{
  final int len=data.length;
  if ((len & 0x01) != 0) {
    throw new IllegalArgumentException("Odd number of characters.");
  }
  final byte[] out=new byte[len >> 1];
  for (int i=0, j=0; j < len; i++) {
    int f=toDigit(data[j],j) << 4;
    j++;
    f=f | toDigit(data[j],j);
    j++;
    out[i]=(byte)(f & 0xFF);
  }
  return out;
}
