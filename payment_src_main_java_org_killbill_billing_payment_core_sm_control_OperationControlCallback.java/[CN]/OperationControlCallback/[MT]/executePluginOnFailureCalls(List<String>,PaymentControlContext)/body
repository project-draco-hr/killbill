{
  final OnFailurePaymentControlResult result=controlPluginRunner.executePluginOnFailureCalls(paymentStateContext.getAccount(),paymentControlContext.getPaymentMethodId(),paymentStateControlContext.getAttemptId(),paymentStateContext.getPaymentId(),paymentStateContext.getPaymentExternalKey(),paymentStateContext.getPaymentTransactionExternalKey(),PaymentApiType.PAYMENT_TRANSACTION,paymentStateContext.getTransactionType(),null,paymentControlContext.getAmount(),paymentControlContext.getCurrency(),paymentStateControlContext.isApiPayment(),paymentControlPluginNames,paymentStateContext.getProperties(),paymentStateContext.getCallContext());
  adjustStateContextPluginProperties(paymentStateContext,result.getAdjustedPluginProperties());
  return result.getNextRetryDate();
}
