{
  if (path == null) {
    return;
  }
  if (path.exists()) {
    final File[] files=path.listFiles();
    if (files != null) {
      for (      final File f : files) {
        if (f.isDirectory()) {
          deleteDirectory(f,true);
        }
        f.delete();
      }
    }
    if (deleteParent) {
      path.delete();
    }
  }
}
