{
  if (hasFailed()) {
    log.error("**********************************************************************************************");
    log.error("*** TESTS HAVE FAILED - LEAVING DB RUNNING FOR DEBUGGING - MAKE SURE TO KILL IT ONCE DONE ****");
    log.error(helper.getConnectionString());
    log.error("**********************************************************************************************");
    return;
  }
  try {
    helper.stop();
  }
 catch (  Exception ignored) {
  }
}
