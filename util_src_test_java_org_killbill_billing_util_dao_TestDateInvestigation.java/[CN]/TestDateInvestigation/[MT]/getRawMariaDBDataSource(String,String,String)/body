{
  final org.mariadb.jdbc.MySQLDataSource rawSource=new org.mariadb.jdbc.MySQLDataSource();
  rawSource.setURL("jdbc:mysql://localhost:3306/killbill?createDatabaseIfNotExist=true&allowMultiQueries=true");
