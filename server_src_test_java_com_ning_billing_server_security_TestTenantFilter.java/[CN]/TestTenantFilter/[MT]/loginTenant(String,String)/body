{
  final AsyncHttpClientConfig.Builder builder=new AsyncHttpClientConfig.Builder();
  final Realm realm=new Realm.RealmBuilder().setPrincipal(apiKey).setPassword(apiSecret).setUsePreemptiveAuth(true).setScheme(AuthScheme.BASIC).build();
  builder.setRealm(realm).setRequestTimeoutInMs(DEFAULT_HTTP_TIMEOUT_SEC * 1000).build();
  httpClient=new AsyncHttpClient(builder.build());
}
