{
  super.configure();
  install(new ClockModule());
  install(new CallContextModule());
  install(new FieldStoreModule());
  install(new TagStoreModule());
  install(new AccountModule());
  install(new BusModule());
  install(new EntitlementModule(){
    @Override protected void installOverdueChecker(){
      bind(OverdueChecker.class).to(MockOverdueChecker.class).asEagerSingleton();
    }
  }
);
  install(new InvoiceModule());
  install(new MockOverdueAccessModule());
  install(new PaymentModule());
  install(new TagStoreModule());
  install(new NotificationQueueModule());
  final MysqlTestingHelper helper=new MysqlTestingHelper();
  bind(MysqlTestingHelper.class).toInstance(helper);
  final IDBI dbi=helper.getDBI();
  bind(IDBI.class).toInstance(dbi);
  bind(TagDefinitionSqlDao.class).toInstance(dbi.onDemand(TagDefinitionSqlDao.class));
}
