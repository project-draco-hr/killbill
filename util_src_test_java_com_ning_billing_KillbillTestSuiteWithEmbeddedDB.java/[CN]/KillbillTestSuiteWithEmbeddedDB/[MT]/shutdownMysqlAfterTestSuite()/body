{
  if (hasFailed()) {
    log.error("*************************************************************************************************");
    log.error("*** TESTS HAVE FAILED - LEAVING MySQL RUNNING FOR DEBUGGING - MAKE SURE TO KILL IT ONCE DONE ****");
    log.error(helper.getConnectionString());
    log.error("*************************************************************************************************");
    return;
  }
  try {
    helper.stopMysql();
  }
 catch (  Exception ignored) {
  }
}
