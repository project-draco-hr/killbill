{
  return withRuntimeCheckForExceptions(new PaymentInfoPlugin(){
    @Override public BigDecimal getAmount(){
      return amount;
    }
    @Override public DateTime getCreatedDate(){
      return new DateTime();
    }
    @Override public DateTime getEffectiveDate(){
      return new DateTime();
    }
    @Override public PaymentPluginStatus getStatus(){
      return PaymentPluginStatus.PROCESSED;
    }
    @Override public String getGatewayError(){
      return null;
    }
    @Override public String getGatewayErrorCode(){
      return null;
    }
  }
);
}
