{
  final PaymentInfoInternalEvent e=new DefaultPaymentInfoEvent(UUID.randomUUID(),UUID.randomUUID(),UUID.randomUUID(),new BigDecimal(12.9),new Integer(13),PaymentStatus.SUCCESS,UUID.randomUUID(),new DateTime(),1L,1L);
  final String json=mapper.writeValueAsString(e);
  final Class<?> clazz=Class.forName(DefaultPaymentInfoEvent.class.getName());
  final Object obj=mapper.readValue(json,clazz);
  Assert.assertTrue(obj.equals(e));
}
