{
  if (!performForegroundWrites) {
    backgroundWriteThread.scheduleWithFixedDelay(new Runnable(){
      @Override public void run(){
        maybePerformBackgroundWrites();
      }
    }
,config.getBackgroundWriteCheckInterval().getMillis(),config.getBackgroundWriteCheckInterval().getMillis(),TimeUnit.MILLISECONDS);
  }
}
