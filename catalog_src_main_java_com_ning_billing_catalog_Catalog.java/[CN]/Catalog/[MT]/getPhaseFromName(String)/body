{
  if (name == null) {
    return null;
  }
  for (  Plan p : plans) {
    if (p.getFinalPhase().getName().equals(name)) {
      return p.getFinalPhase();
    }
    if (p.getInitialPhases() != null) {
      for (      PlanPhase pp : p.getInitialPhases()) {
        if (pp.getName().equals(name)) {
          return pp;
        }
      }
    }
  }
  return null;
}
