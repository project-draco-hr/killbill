{
  final PaymentInfoInternalEvent e=new DefaultPaymentInfoEvent(UUID.randomUUID(),UUID.randomUUID(),new BigDecimal(12.9),Currency.EUR,TransactionStatus.SUCCESS,TransactionType.PURCHASE,new DateTime(),1L,2L,UUID.randomUUID());
  final String json=mapper.writeValueAsString(e);
  final Class<?> clazz=Class.forName(DefaultPaymentInfoEvent.class.getName());
  final Object obj=mapper.readValue(json,clazz);
  Assert.assertTrue(obj.equals(e));
}
