{
  final int maxIterations=7;
  for (int curIteration=0; curIteration < maxIterations; curIteration++) {
    log.info("################################  ITERATION " + curIteration + "  #########################");
    Thread.sleep(1000);
    setupTest();
    testBasePlanCompleteWithBillingDayPresent();
