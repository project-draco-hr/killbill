    setupTest();
    testBasePlanCompleteWithBillingDayInPast();
    Thread.sleep(1000);
    setupTest();
    testBasePlanCompleteWithBillingDayAlignedWithTrial();
    Thread.sleep(1000);
    setupTest();
    testBasePlanCompleteWithBillingDayInFuture();
  }
}
