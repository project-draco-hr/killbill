{
  final int maxIterations=10;
  for (int curIteration=0; curIteration < maxIterations; curIteration++) {
    log.info("################################  ITERATION " + curIteration + "  #########################");
    if (curIteration != 0) {
      setupTest();
    }
    testRepairChangeBPWithAddonIncluded();
    cleanupTest();
    Thread.sleep(1000);
  }
}
