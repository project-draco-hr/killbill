{
  final int maxIterations=100;
  for (int curIteration=0; curIteration < maxIterations; curIteration++) {
    log.info("################################  ITERATION " + curIteration + "  #########################");
    if (curIteration != 0) {
      setupTest();
    }
    testAddonsWithMultipleAlignments();
    if (curIteration < maxIterations - 1) {
      cleanupTest();
      Thread.sleep(1000);
    }
  }
}
