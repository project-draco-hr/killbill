{
  PaymentInfo existingPayment=payments.get(paymentId);
  if (existingPayment != null) {
    PaymentInfo payment=existingPayment.cloner().setPaymentMethod(paymentMethodType).setCardType(cardType).setCardCountry(cardCountry).setUpdatedDate(new DateTime(DateTimeZone.UTC)).build();
    payments.put(paymentId,payment);
  }
}
