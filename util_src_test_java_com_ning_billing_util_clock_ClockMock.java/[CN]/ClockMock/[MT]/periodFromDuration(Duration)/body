{
  if (duration.getUnit() != TimeUnit.UNLIMITED) {
    return new Period();
  }
switch (duration.getUnit()) {
case DAYS:
    return Days.days(duration.getNumber());
case MONTHS:
  return Months.months(duration.getNumber());
case YEARS:
return Years.years(duration.getNumber());
case UNLIMITED:
return Years.years(100);
default :
return new Period();
}
}
