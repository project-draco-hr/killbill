{
  super.setup();
  final ConfigSource configSource=new ConfigSource(){
    private final Map<String,String> properties=ImmutableMap.<String,String>of("killbill.template.invoiceFormatterFactoryClass","com.ning.billing.mock.MockInvoiceFormatterFactory");
    @Override public String getString(    final String propertyName){
      return properties.get(propertyName);
    }
  }
;
  final TranslatorConfig config=new ConfigurationObjectFactory(configSource).build(TranslatorConfig.class);
  translation=new DefaultCatalogTranslator(config);
}
