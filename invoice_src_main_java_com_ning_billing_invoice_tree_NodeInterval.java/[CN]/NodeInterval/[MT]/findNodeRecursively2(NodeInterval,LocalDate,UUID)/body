{
  if (!curNode.isRoot() && curNode.containsItem(targetItemId)) {
    return curNode;
  }
  NodeInterval curChild=curNode.getLeftChild();
  while (curChild != null) {
    final NodeInterval result=findNodeRecursively2(curChild,date,targetItemId);
    if (result != null) {
      return result;
    }
    curChild=curChild.getRightSibling();
  }
  return null;
}
