{
  final CallContext callContext=context.createContext(createdBy,reason,comment,request);
  final Account account=accountUserApi.getAccountById(UUID.fromString(json.getAccountId()),callContext);
  final DirectPayment payment=paymentApi.notifyChargebackWithPaymentControl(account,UUID.fromString(json.getChargedBackTransactionId()),json.getChargedBackTransactionId(),json.getAmount(),Currency.valueOf(json.getCurrency()),createInvoicePaymentControlPluginApiPaymentOptions(false),callContext);
  return uriBuilder.buildResponse(uriInfo,DirectPaymentResource.class,"getDirectPayment",payment.getId());
}
