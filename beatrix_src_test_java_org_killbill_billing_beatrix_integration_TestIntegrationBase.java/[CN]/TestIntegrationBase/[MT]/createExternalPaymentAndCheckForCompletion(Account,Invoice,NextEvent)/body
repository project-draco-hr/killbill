{
  return doCallAndCheckForCompletion(new Function<Void,DirectPayment>(){
    @Override public DirectPayment apply(    @Nullable final Void input){
      try {
        return paymentApi.createPurchaseWithPaymentControl(account,account.getPaymentMethodId(),null,invoice.getBalance(),invoice.getCurrency(),invoice.getId().toString(),UUID.randomUUID().toString(),PLUGIN_PROPERTIES,EXTERNAL_PAYMENT_OPTIONS,callContext);
      }
 catch (      final PaymentApiException e) {
        fail(e.toString());
        return null;
      }
    }
  }
,events);
}
