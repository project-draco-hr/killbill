{
  checkNotNullParameter(account,"account");
  checkNotNullParameter(amount,"amount");
  checkNotNullParameter(currency,"currency");
  checkNotNullParameter(paymentId,"paymentId");
  checkPositiveAmount(amount);
  logAPICall(TransactionType.CHARGEBACK.toString(),account,null,paymentId,amount,currency,null,paymentTransactionExternalKey);
  final InternalCallContext internalCallContext=internalCallContextFactory.createInternalCallContext(account.getId(),callContext);
  return paymentProcessor.createChargeback(IS_API_PAYMENT,null,account,paymentId,paymentTransactionExternalKey,amount,currency,true,callContext,internalCallContext);
}
