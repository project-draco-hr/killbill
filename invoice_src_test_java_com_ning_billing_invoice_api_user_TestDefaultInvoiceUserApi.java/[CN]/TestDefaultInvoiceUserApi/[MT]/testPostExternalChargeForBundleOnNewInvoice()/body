{
  final BigDecimal accountBalance=invoiceUserApi.getAccountBalance(accountId);
  final BigDecimal externalChargeAmount=BigDecimal.TEN;
  final UUID bundleId=UUID.randomUUID();
  final InvoiceItem externalChargeInvoiceItem=invoiceUserApi.insertExternalChargeForBundle(accountId,bundleId,externalChargeAmount,UUID.randomUUID().toString(),clock.getUTCToday(),accountCurrency,context);
