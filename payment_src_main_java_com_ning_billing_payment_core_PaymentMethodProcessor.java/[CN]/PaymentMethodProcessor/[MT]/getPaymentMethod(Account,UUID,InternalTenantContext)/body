{
  final PaymentMethodModelDao paymentMethodModel=paymentDao.getPaymentMethod(paymentMethodId,context);
  if (paymentMethodModel == null) {
    throw new PaymentApiException(ErrorCode.PAYMENT_NO_SUCH_PAYMENT_METHOD,paymentMethodId);
  }
  final List<PaymentMethod> result=getPaymentMethodInternal(Collections.singletonList(paymentMethodModel),account.getId(),account.getExternalKey(),context);
  return (result.size() == 0) ? null : result.get(0);
}
