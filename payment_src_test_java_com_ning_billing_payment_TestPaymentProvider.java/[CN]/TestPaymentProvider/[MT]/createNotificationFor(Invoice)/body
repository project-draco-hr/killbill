{
  return new InvoiceCreationNotification(){
    @Override public UUID getInvoiceId(){
      return invoice.getId();
    }
    @Override public DateTime getInvoiceCreationDate(){
      return invoice.getInvoiceDate();
    }
    @Override public Currency getCurrency(){
      return invoice.getCurrency();
    }
    @Override public BigDecimal getAmountOwed(){
      return invoice.getAmountOutstanding();
    }
    @Override public UUID getAccountId(){
      return invoice.getAccountId();
    }
  }
;
}
