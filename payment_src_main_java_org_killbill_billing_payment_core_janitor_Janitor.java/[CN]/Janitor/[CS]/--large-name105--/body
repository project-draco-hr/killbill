{
  this.janitorExecutor=janitorExecutor;
  this.paymentConfig=paymentConfig;
  this.pendingPaymentTransactionTask=new PendingPaymentTransactionTask(this,internalCallContextFactory,paymentConfig,paymentDao,clock,paymentSMHelper,retrySMHelper,accountInternalApi,pluginControlledPaymentAutomatonRunner,pluginRegistry);
  this.incompletePaymentAttemptTask=new IncompletePaymentAttemptTask(this,internalCallContextFactory,paymentConfig,paymentDao,clock,paymentSMHelper,retrySMHelper,accountInternalApi,pluginControlledPaymentAutomatonRunner,pluginRegistry);
  this.erroredPaymentCompletionTask=new UnknownPaymentTransactionTask(this,internalCallContextFactory,paymentConfig,paymentDao,clock,paymentSMHelper,retrySMHelper,accountInternalApi,pluginControlledPaymentAutomatonRunner,pluginRegistry);
  this.isStopped=false;
}
